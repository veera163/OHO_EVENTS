<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Update"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:background="@drawable/editboader"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/editboader"
            android:layout_marginRight="5dp"
            android:layout_weight="1.2"
            android:gravity="start" />
        <EditText
            android:id="@+id/textArea_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/manualbg"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status :"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/editboader"
            android:layout_marginRight="5dp"
            android:layout_weight="1.2"
            android:gravity="start" />

        <!-- Spinner Element -->
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:prompt="@string/spinner_title"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/consignlay"
        android:visibility="gone"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="consig.Number :"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/editboader"
            android:layout_marginRight="5dp"
            android:layout_weight="1.2"
            android:gravity="start" />
        <EditText
            android:id="@+id/consignmentNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/edt_bg_normal"
            android:layout_weight="1"
            android:textColor="#000000" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinlay"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status :"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/editboader"
            android:layout_marginRight="5dp"
            android:layout_weight="1.2"
            android:gravity="start" />

        <!-- Spinner Element -->
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:prompt="@string/spinner_title"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/track"
        android:visibility="gone"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tracking Url:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/editboader"
            android:layout_marginRight="5dp"
            android:layout_weight="1.2"
            android:gravity="start" />
        <EditText
            android:id="@+id/trackingUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="TrackingUrl"
            android:textColorHint="#968a8a"
            android:background="@drawable/edt_bg_normal"
            android:layout_weight="1"
            android:textColor="#000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Update"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/Update"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>